<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logic.home.YLZHomeActivity">
    <include
        layout="@layout/toolbar_customer_imr"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_margin="0dp"/>
    <TextView
        android:id="@+id/tv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBarRL"
        android:layout_width="140dp"
        android:layout_height="86dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="#ffdd33" />
    <TextView
        android:id="@+id/tv2"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:text="世界杯惊现“毒奶榜”，来自东方的神秘力量，位列前四的几只强队依次被淘汰"
        android:textColor="#000000"
        android:textSize="16dp" />
    <TextView
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:text="8分钟前"
        android:textColor="#333"
        android:textSize="12dp" />
    <Button
        android:id="@+id/smsLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toLeftOf ="parent"
        android:textColor="#ffffff"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="24dp"
        android:textSize="18dp"
        android:background="@drawable/btn_radius"
        android:text="登录"/>
    <LinearLayout
        android:id="@+id/midLl"
        app:layout_constraintTop_toBottomOf="@id/smsLoginBtn"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/order01RL"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/IMV01"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/Tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/IMV01" />
            <TextView
                android:id="@+id/valTv01"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:minWidth="16dp"
                android:textAlignment="center"
                android:layout_height="16dp"
                android:background="@drawable/shape_order"
                android:layout_alignTop="@id/IMV01"
                android:layout_alignRight="@id/IMV01"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="-10dp"
                android:gravity="center_horizontal" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/order02RL"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/IMV02"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/Tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/IMV02" />
            <TextView
                android:id="@+id/valTv02"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:minWidth="16dp"
                android:textAlignment="center"
                android:layout_height="16dp"
                android:background="@drawable/shape_order"
                android:layout_alignTop="@id/IMV02"
                android:layout_alignRight="@id/IMV02"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/RL"
        app:layout_constraintTop_toBottomOf="@id/midLl"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待付款"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />
        <Button
            android:id="@+id/waitingButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/Tv"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textSize="18dp"
            android:background="@drawable/btn_radius"
            android:text="待付款"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/protocolLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:id="@+id/fastLoginLl"
        app:layout_constraintBottom_toTopOf="@id/protocolLabel"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/fingerRl"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/fingerIMV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/fingerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/fingerIMV" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/alipayRl"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/alipayIMV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/alipayTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/alipayIMV" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ctidRl"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/ctidIMV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/ctidTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/ctidIMV" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/appleRl"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/appleIMV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/appleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待付款"
                android:textSize="14sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_below="@id/appleIMV" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/otherLoginRL"
        app:layout_constraintBottom_toTopOf="@id/fastLoginLl"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/otherLoginLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他登录方式"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="16dp" />
        <View
            android:id="@+id/leftView"
            android:layout_width="72dp"
            android:layout_height="0.25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/otherLoginLabel"
            android:layout_marginRight="16dp"
            android:background="@color/purple_700"/>
        <View
            android:id="@+id/rightView"
            android:layout_width="72dp"
            android:layout_height="0.25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/otherLoginLabel"
            android:background="@color/purple_700"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>