<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:textColor="#000000"/>
        <LinearLayout
            android:id="@+id/picGroupLl"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/titleView"
            android:layout_height="120dp"
            android:orientation="horizontal">
            <com.example.androidproject.base.view.YLZCornerImageView
                android:id="@+id/image0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                app:left_top_radius="20dp"
                app:left_bottom_radius="20dp"/>
            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"/>
            <com.example.androidproject.base.view.YLZCornerImageView
                android:id="@+id/image2"
                app:right_top_radius="20dp"
                app:right_bottom_radius="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/picGroupLl">
        </TextView>
        <TextView
            android:id="@+id/readView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight = "true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            android:layout_below="@id/picGroupLl">
        </TextView>
    </RelativeLayout>
</LinearLayout>